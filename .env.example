# ===================================
# CONFIGURATION GÉNÉRALE
# ===================================
PROJECT_NAME="Job Keywords Analyzer"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"

# ===================================
# SÉCURITÉ JWT
# ===================================
SECRET_KEY="your-super-secret-key-change-in-production-must-be-32-chars-minimum"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================================
# BASE DE DONNÉES
# ===================================
DATABASE_URL="mysql+pymysql://job_user:job_password@localhost:3306/job_analyzer"
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===================================
# REDIS
# ===================================
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_DB=0

# ===================================
# ELASTICSEARCH
# ===================================
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""
ELASTICSEARCH_INDEX_PREFIX="job_analyzer"

# ===================================
# EMAIL
# ===================================
SEND_VERIFICATION_EMAILS=true
SEND_NOTIFICATION_EMAILS=true

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_TLS=true
SMTP_SSL=false

# Email addresses
EMAIL_FROM="noreply@job-analyzer.com"
EMAIL_FROM_NAME="Job Keywords Analyzer"
ADMIN_EMAIL="admin@job-analyzer.com"

# ===================================
# OAUTH PROVIDERS
# ===================================

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8000/api/auth/oauth/google/callback"

# LinkedIn OAuth
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"
LINKEDIN_REDIRECT_URI="http://localhost:8000/api/auth/oauth/linkedin/callback"

# GitHub OAuth (optionnel)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ===================================
# SCRAPING
# ===================================
SCRAPING_DELAY_MIN=1.0
SCRAPING_DELAY_MAX=3.0
SCRAPING_CONCURRENT_REQUESTS=16
SCRAPING_DOWNLOAD_TIMEOUT=180
SCRAPING_RATE_LIMIT_ENABLED=true
SCRAPING_REQUESTS_PER_MINUTE=60

# ===================================
# NLP
# ===================================
SPACY_MODEL="fr_core_news_md"
NLP_BATCH_SIZE=100
NLP_MAX_TEXT_LENGTH=1000000

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTH=10
RATE_LIMIT_API=1000
RATE_LIMIT_SEARCH=100
RATE_LIMIT_ADMIN=200

# ===================================
# CORS
# ===================================
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000"

# ===================================
# LOGGING
# ===================================
LOG_LEVEL="INFO"
LOG_FORMAT="detailed"
LOG_FILE=""
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# ===================================
# PERFORMANCE
# ===================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
MAX_UPLOAD_SIZE=10485760
TASK_QUEUE_BROKER="redis://localhost:6379/1"
TASK_RESULT_BACKEND="redis://localhost:6379/2"
TASK_WORKER_CONCURRENCY=4

# ===================================
# MONITORING
# ===================================
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=30
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE=1.0
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ===================================
# FEATURES FLAGS
# ===================================
FEATURE_USER_REGISTRATION=true
FEATURE_OAUTH_LOGIN=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SEARCH_ALERTS=true
FEATURE_PREMIUM_FEATURES=true
FEATURE_ADMIN_PANEL=true

# ===================================
# BUSINESS LOGIC
# ===================================
FREE_USER_SEARCHES_PER_DAY=50
FREE_USER_SAVED_SEARCHES=5
FREE_USER_ALERTS=2
PREMIUM_USER_SEARCHES_PER_DAY=1000
PREMIUM_USER_SAVED_SEARCHES=50
PREMIUM_USER_ALERTS=20
MAX_JOBS_PER_SCRAPING_SESSION=1000
JOB_DUPLICATE_CHECK_DAYS=30
JOB_DATA_RETENTION_DAYS=365

# ===================================
# DÉVELOPPEMENT
# ===================================
TESTING=false
TEST_DATABASE_URL=""
RELOAD_ON_CHANGE=false
PROFILING_ENABLED=false